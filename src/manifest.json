{
  "manifest_version": 2,
  "name": "Tumber",
  "description": "Display tab numbers for tab jumping ninja!",
  "version": "0.2",
  "permissions": [
      "tabs", "contextMenus", "http://*/","https://*/"
  ],
  "background": {
      "persistent": false,
      "scripts": ["tumber.js"]
  },
  "commands": {
    "toggle_current_window": {
      "suggested_key": {
        "windows": "Ctrl+Space"
      },
      "description": "Show/hide current window"
    },
    "toggle_all_windows": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Space"
      },
      "description": "Show/hide all windows"
    }
  }
}
