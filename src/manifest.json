{
  "manifest_version": 2,
  "name": "Tumber - Tab Numbers for Chrome",
  "description": "Display tab numbers for tab jumping ninja!",
  "version": "0.4",
  "permissions": [
      "tabs", "contextMenus", "<all_urls>"
  ],
  "background": {
      "persistent": false,
      "scripts": [
        "constants.js",
        "tumber.js",
        "events.js"
      ]
  },
  "commands": {
    "toggle_current_window": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "windows": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      },
      "description": "Toggle current window"
    },
    "toggle_all_windows": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "windows": "Ctrl+Shift+Space",
        "mac": "MacCtrl+Shift+Space"
      },
      "description": "Toggle all windows"
    }
  }
}
